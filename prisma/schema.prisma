// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default (autoincrement())

  email String
  senha String
  cpf String
  phone String
  birth Date
  signature Float
  isActive Boolean @map("is_active")

  createdAt DateTime @map("created_at") @default(now())
  updateAt DateTime @map("update_at") @updateAt
}

model cadastroEmpresaFisica {
  id Int

  name String
  cpf String
  cep String
  address String
  neighborhood String
  number Int
  state String
  city String
  phone String
  email String
  site String
  isActive Boolean @map("is_active")

  creadtedAt dateTime @map("created_at") @default(now())
  updatedAt dateTime @map("update_at") @updateAt
}

model cadastroEmpresaJuridica {
  
  id Int 
  
  name String
  cnpj String
  cep String
  adress String
  number Int
  neighborhood String
  isActive Boolean @map("is_active")

  createAdaT Datetime @map("created_at") @default(now())
  upatedAt DateTime @map("update_at") @updateAt
}

model Client {
  id String

  name String
  cpf String
  phone String
  email String
  address String
  number Int
  neighborhood String
  state String
  city String
  isActive Boolean @map("is_active")

  createdAt DateTime @map("created_at") @default(now())
  updateAt DateTime @map("update_at") @updateAt
}

model Servico {
  id Int
  nameService String @map("name_service")
  price Float
  observations String
  isActive Boolean @map("is_active")

  createAdaT Datetime @map("created_at") @default(now())
  upatedAt DateTime @map("update_at") @updateAt
}

model Produto {
  id Int
 
  name String
  category String
  salesUnit String @map("sales_unit")
  purchasePrice String @map("purchase_price")
  salePrice String @map("sale_price")
  observations String
  isActive Boolean @map("is_active")
 
  creadtedAt dateTime @map("created_at") @default(now())
  updatedAt dateTime @map("update_at") @updateAt
}